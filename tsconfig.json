{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true
  },
  "include": [
    "@types",
    "src/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
